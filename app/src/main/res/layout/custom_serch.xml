<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_edge3"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/holo_red_dark" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:entries="@array/spinner_item"
        android:id="@+id/editText8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:background="@drawable/test2222"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/textView18" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"

        android:id="@+id/editText12"
        android:hint="اسم السلع المراد البحث عنها"
        android:maxLength="20"
        android:background="@drawable/test2222"
        android:textSize="14sp"
        android:layout_alignParentStart="true"
        android:gravity="top|right|center_vertical|center"
        android:inputType="textMultiLine"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/editText8"
        android:layout_marginBottom="10dp" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="بحث"
        android:onClick="FragmentTwoClick"
        android:layout_weight="2"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_below="@+id/editText12"
        android:layout_alignParentStart="true" />


</RelativeLayout>