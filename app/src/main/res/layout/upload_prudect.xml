<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_prudect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Upload_prudect"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFF"
        android:layout_above="@+id/button18"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/editText10"
                android:hint="اسم السلعة"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/editText9"
                android:hint="الوصف والسعر"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="قم باختيار صور المنتج"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:gravity="center"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:id="@+id/linearLayout0"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">



                <ImageView

                    android:text="مطلوبات"
                    android:layout_width="30dp"
                    android:layout_height="110dp"
                    android:id="@+id/button1"



                    android:layout_centerVertical="true"
                    android:textColor="#fff"

                    android:layout_weight="2"

                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"

                    android:elevation="1dp"
                    android:paddingTop="7dp"
                    android:background="@drawable/add_image"

                    />


                <ImageView
                    android:text="رحلاتي"
                    android:background="@drawable/add_image"
                    android:layout_width="30dp"
                    android:layout_height="110dp"
                    android:id="@+id/button2"


                    android:layout_centerVertical="true"
                    android:textColor="#fff"

                    android:onClick="FragmentTwoClick"
                    android:layout_weight="2"

                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"

                    android:elevation="1dp"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

               <ImageView
                    android:text="حسابي"
                   android:background="@drawable/add_image"
                   android:layout_width="30dp"
                   android:layout_height="110dp"
                    android:id="@+id/button3"




                    android:layout_centerVertical="true"
                    android:textColor="#fff"


                    android:layout_weight="2"

                    android:textSize="12sp"
                    android:textStyle="normal|bold"

                    android:elevation="1dp"
                    android:paddingTop="7dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:id="@+id/linearLayout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">



                <ImageView

                    android:text="مطلوبات"
                    android:layout_width="30dp"
                    android:layout_height="110dp"
                    android:id="@+id/button4"



                    android:layout_centerVertical="true"
                    android:textColor="#fff"

                    android:layout_weight="2"

                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"

                    android:elevation="1dp"
                    android:paddingTop="7dp"
                    android:background="@drawable/add_image"

                    />


                <ImageView
                    android:text="رحلاتي"
                    android:background="@drawable/add_image"
                    android:layout_width="30dp"
                    android:layout_height="110dp"
                    android:id="@+id/button5"


                    android:layout_centerVertical="true"
                    android:textColor="#fff"

                    android:onClick="FragmentTwoClick"
                    android:layout_weight="2"

                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"

                    android:elevation="1dp"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <ImageView
                    android:text="حسابي"
                    android:background="@drawable/add_image"
                    android:layout_width="30dp"
                    android:layout_height="110dp"
                    android:id="@+id/button6"




                    android:layout_centerVertical="true"
                    android:textColor="#fff"


                    android:layout_weight="2"

                    android:textSize="12sp"
                    android:textStyle="normal|bold"

                    android:elevation="1dp"
                    android:paddingTop="7dp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:text="رفع الاعلان"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button18"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:textColor="#fff" />

</RelativeLayout>
