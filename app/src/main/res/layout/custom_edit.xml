<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_edge3"
    android:padding="7dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="عنوان الاعلان"
        android:background="@drawable/test2222"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:ems="10"

        android:id="@+id/editText12"
        android:hint="الوصف والسعر"
        android:maxLength="20"
        android:background="@drawable/test2222"
        android:textSize="14sp"
        android:layout_alignParentStart="true"
        android:gravity="top|right|center_vertical|center"
        android:inputType="textMultiLine"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/editText8" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ارسال"
        android:onClick="FragmentTwoClick"
        android:layout_weight="2"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_below="@+id/editText12"
        android:layout_alignParentStart="true" />


</RelativeLayout>